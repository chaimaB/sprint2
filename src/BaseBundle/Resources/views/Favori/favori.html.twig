{% block body %}
    <style>
        #divDetailEvent{
            text-align: center;
            min-height: 20px;
            background-size:cover;
            padding: 10em 0;
            height: 50px;
            width: 1680px;
            display: table;
            background: url("{{ asset('images/souv.jpg') }}") no-repeat fixed 0px 0px;
        }
    </style>
    <div id="divDetailEvent">
        <div class="container">
            <h3 class="tittle">Acceuil/Ev√®nement/Favoris</h3>
